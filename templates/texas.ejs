            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            font-weight: 800;
            line-height: 1;
        }
        .card-back {
            background: linear-gradient(160deg, #334155 0%, #1e293b 100%);
            color: #cbd5e1;
            border-color: rgba(255,255,255,0.08);
        }
        .s-red { color: #dc2626; }
        .s-black { color: #0f172a; }
        .table-felt {
            background:
                radial-gradient(circle at 20% 20%, rgba(255,255,255,0.06), transparent 35%),
                radial-gradient(circle at 80% 70%, rgba(255,255,255,0.05), transparent 30%),
                linear-gradient(145deg, #0f766e 0%, #115e59 45%, #134e4a 100%);
            border: 3px solid #78350f;
            box-shadow: inset 0 2px 12px rgba(0,0,0,0.28), 0 18px 36px rgba(0,0,0,0.35);
        }
        .chip-pill {
            background: rgba(255,255,255,0.16);
            border: 1px solid rgba(255,255,255,0.24);
            backdrop-filter: blur(2px);
        }
    </style>
</head>
